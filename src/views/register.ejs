<%- layout('layouts/main') %>

<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h3>Registro</h3>
      </div>
      <div class="card-body">
        <form class="mt-4" action="/register" method="post">
            <input
              class="form-control"
              type="text"
              name="username"
              placeholder="Ingresar usuario..."
              required
            />
          <div class="form-group">
            <input
              class="form-control mt-2"
              type="email"
              name="email"
              placeholder="Ingresar email..."
              required
            />
            <input
              class="form-control mt-2"
              type="password"
              name="password"
              placeholder="Ingresar password..."
              required
            />
            <button class="btn btn-primary btn-block mt-4" type="submit" name="">Registrarse</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
